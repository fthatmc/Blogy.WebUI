@model List<ResultLast3CurrentArticlesOfWriter>

<div class="sidebar-box">
    <h3 class="heading">Yazarın Güncel Blogları</h3>
    @foreach(var item in Model)
    {
        <div class="post-entry-sidebar">
            <ul>
                <li>
                    <a href="">
                        <img src="@item.ImageURL" alt="Image placeholder" class="me-4 rounded">
                        <div class="text">
                            <h4>@item.Title</h4>
                            <div class="post-meta">
                                <span class="mr-2">@item.Date.ToShortDateString()</span>
                            </div>
                        </div>
                    </a>
                </li>

            </ul>
        </div>
    }
    
    
    
</div>