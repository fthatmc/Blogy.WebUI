@using Blogy.Dto.Layer.CommentDto
@model CommentDto



<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum bırakın</h3>
    <form action="/Comment/CreateComment" method="post" class="p-5 bg-light">
        <input type="hidden" asp-for="@Model.ArticleId" />
        <div class="form-group">
            <label for="name">Adınız </label>
            <input name="Name" type="text" class="form-control" id="name">
        </div>
               
        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea name="Content" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" id="btnComment" value="Yorum Yap" class="btn btn-primary">
        </div>

    </form>
</div>


