@model CreateRegisterViewModel

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">

    <form method="post">

        <br /> <br />
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name"/>
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="SurName" />
        <br />
        <label>Kullanıcı Adınız</label>
        <input type="text" class="form-control" asp-for="UserName" />
        <br />
        <label>Email Adresi</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>Şifre</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <button class="btn btn-info">Kayıt Ol</button>

    </form>
</div>