@model List<Blogy.EntityLayer.Concrete.Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Kategoriye Ait Bloglar</th>
        </tr>
        @foreach(var x in Model)
        {
            <tr>
                <td>@x.CategoryId</td>
                <td>@x.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@x.CategoryId/" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@x.CategoryId/" class="btn btn-info">Güncelle</a></td>
                <td><a href="#" class="btn btn-dark">Kategoriye Ait Bloglar</a></td>
            </tr>
            
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-success">Yeni Kategori Girişi</a>
</div>