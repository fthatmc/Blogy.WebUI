@model Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Güncelle</h4>
                        <p class="card-subtitle mb-4">Kategori Güncelleme işlemini burdan yapabilirsiniz. Veri girişinden sonra Güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="CategoryId" />
                                <label for="CategoryName">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="CategoryName">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

