@model List<Tag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Etiket Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Etiket ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Etiket Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.TagTitle</td>
                                            <td><a href="/Admin/Tag/DeleteTag/@item.TagId/" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/Tag/UpdateTag/@item.TagId/" class="btn btn-outline-success">Güncelle</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/Tag/CreateTag/" class="btn btn-outline-primary">Yeni Etiket Girişi</a>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
