

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}


<div class="content-wrapper">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                    </p>
                    <div class="table-responsive">
                        <div class="row">

                            @await Component.InvokeAsync("_WheatherApıComponentPartial")
                            @await Component.InvokeAsync("_MyBlogsComponentPartial")
                            
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-sm-12 mt-3">
                                <h3>İstatistikler</h3>
                            </div>
                            <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-warning">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Blog Sayısım</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.BlogCount
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-danger">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Yorum Sayım</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.CommentCount
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-primary">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Son Blog</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.LastArticle
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-success">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Son Yorumu Yapan</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.LastComment
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</div>
