@model Article

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Güncelleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait bloglar üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                           
                            <input type="hidden" asp-for="ArticleId" class="form-control" />
                            <input type="hidden" asp-for="AppUserId" class="form-control" />
                            <input type="hidden" asp-for="WriterId" class="form-control" />
                            <label>Blog Başlığı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Blog Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            <br />
                            <label>Blog Kapak Fotoğraf Yolu</label>
                            <input type="text" asp-for="CoverImageUrl" class="form-control" />
                            <br />
                            <label>Blog Detayları</label>
                            <textarea rows="15" class="form-control" id="myeditor" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-info">Bloğu Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

